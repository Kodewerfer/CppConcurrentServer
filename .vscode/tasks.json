{
  "tasks": [{
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-g",
        "${workspaceFolder}/src/*/*.cpp",
        "-o",
        "${workspaceFolder}/shfd"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
