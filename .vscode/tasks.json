    {
      "type": "shell",
      "label": "Build & run",
      "command": "${workspaceFolder}/shfd",
      "dependsOn": [
        "g++ build active file"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}